+
+int vgt_wp_hash_rem(struct wp_hash_table *wp_ht, unsigned long gpfn)
+{
+    int index = wp_hash(gpfn);
+    struct wp_hash_table *next, *prev;
+
+    if (wp_ht[index].gpfn == gpfn) {
+        wp_ht[index].gpfn = WP_INVALID_GPFN;
+    }
