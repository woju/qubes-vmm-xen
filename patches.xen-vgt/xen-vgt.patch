+    else {
+        /* self-automicity */
+        ne = xmalloc_bytes(sizeof(wp_ht[0]));
+	if ( ne == NULL )
+	    return -ENOMEM;
+	ne->next = wp_ht[index].next;
+	ne->gpfn = gpfn;
+	wp_ht[index].next = ne;
+    }
+    return 0;
