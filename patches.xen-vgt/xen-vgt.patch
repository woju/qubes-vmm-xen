+int vgt_wp_hash_add(struct wp_hash_table *wp_ht, unsigned long gpfn)
+{
+    int index = wp_hash(gpfn);
+    struct wp_hash_table *ne;
+
+    if ( lookup_wp_hash_table(wp_ht, gpfn) != NULL )
+        return -EINVAL;
+    if (wp_ht[index].gpfn == WP_INVALID_GPFN)
